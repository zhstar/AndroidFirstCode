<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.codekun.androidfirstcode.ch8.Ch8MediaActivity">

    <Button
        android:id="@+id/ch8_media_playSound_button"
        android:text="播放声音"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ch8_media_playMovie_button"
        android:text="播放视频"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <VideoView
        android:visibility="gone"
        android:id="@+id/ch8_media_videoView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="400dp"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ch8_media_ctrls_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/ch8_media_play_button"
                android:text="播放"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/ch8_media_pause_button"
                android:text="暂停"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/ch8_media_stop_button"
                android:text="停止"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
