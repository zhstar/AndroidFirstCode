<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.codekun.androidfirstcode.ch6.Ch6SQLiteActivity">

    <Button
        android:id="@+id/ch6_sqlite_create_table_button"
        android:text="Create Tabel Book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ch6_sqlite_add_button"
        android:text="添回数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ch6_sqlite_update_button"
        android:text="更新数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ch6_sqlite_delete_button"
        android:text="删除数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ch6_sqlite_query_button"
        android:text="查询数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ch6_sqlite_transaction_button"
        android:text="数据库事务演示"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
