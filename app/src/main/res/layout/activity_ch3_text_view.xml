<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:codekun="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.codekun.androidfirstcode.ch3.Ch3TextViewActivity">

    <TextView
        android:id="@+id/ch3_textView"
        android:text="你真的会用简单的 TextView 吗?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/ch3_link_textView"
        android:text="第一种实现超链接的方式：\nhttp://www.apkbus.com/forum.php?mod=viewthread&amp;tid=17372"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:textSize="20sp"
        android:background="#cccccc"
        android:autoLink="all"
        />
    <TextView
        android:id="@+id/ch3_link2_textView"
        android:text="@string/ch3_link_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ch3_link3_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ch3_link4_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
